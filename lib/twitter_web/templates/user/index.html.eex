<h1>Lista de Usu√°rios</h1>
<h1><%= @current_user.id %></h1>
<table class="table">
    <tr>
        <td>ID</td>
        <td>First Name</td>
        <td>Detalhes</td>
    </tr>
    <%= for user <- @users do %>
        <tr>
            <td><%= user.id %></td>
            <td><%= first_name(user) %></td>
            <td>
                <%= link "VER", to: Routes.user_path(@conn, :show, user.id) %>
            </td>
            <%= if user.id == @current_user.id do %>
            <td>
                <%= link "EDITAR", to: Routes.user_path(@conn, :edit, user) %>
            </td>
            <td>
                <%= link "DELETAR", to: Routes.user_path(@conn, :delete, user), method: :delete, data: [confirm: "Remover?"] %>
            </td>
            <% end %>
        </tr>
    <% end %>
</table>
